<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <EditText
            android:layout_width="583dp"
            android:layout_height="59dp"
            android:inputType="textPersonName"
            android:text="My random App"
            android:ems="10"
            android:id="@+id/bannerText" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
            android:gravity="center"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="256dp"
            android:layout_marginStart="256dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="256dp" android:layout_marginRight="256dp"
            app:layout_constraintTop_toBottomOf="@+id/bannerText" android:layout_marginTop="284dp"
            app:layout_constraintHorizontal_bias="0.481"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editText1"
            app:layout_constraintTop_toBottomOf="@+id/bannerText" android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editText2"
            app:layout_constraintTop_toBottomOf="@+id/bannerText" android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="324dp"
            android:layout_marginStart="324dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp" android:layout_marginEnd="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>